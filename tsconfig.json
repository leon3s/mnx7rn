{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
  },
  "exclude": [
    "dist",
    "test",
    "node_modules",
  ],
  "typedocOptions": {
    "entryPoints": [
      "./srcs/index.ts"
    ],
    "out": "docs"
  }
}
